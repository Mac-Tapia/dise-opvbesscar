{
  "extends": "markdownlint/style",
  "rules": {
    "MD013": {
      "line_length": 80,
      "heading_line_length": 80,
      "header_line_length": 80,
      "code_line_length": 200,
      "code_blocks": false,
      "tables": false,
      "headers": true,
      "headers_length": 80
    },
    "MD024": {
      "siblings_only": true
    },
    "MD036": false,
    "MD040": false,
    "no-hard-tabs": false,
    "no-multiple-spaces": false
  }
}